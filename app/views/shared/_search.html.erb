<div>
    <%= form_tag search_path, :method => :get, :remote => true do  %>
<table>	
  <tr>
	<td style='width:100%;'>
        <%= text_field_tag :query, params[:query], :value => params[:query] %>
  <span class='cleari opacity' onmousemove="fadeto(this)" onmouseout="fadeout(this)" onclick="cleari()"></span>
	</td>
	<td>   
	  <%= submit_tag 'Go', :name => nil %>
	</td>
</table>
<% end %>

</div>

